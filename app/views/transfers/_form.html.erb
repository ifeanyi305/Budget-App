<button><%= link_to "back", groups_path  %></button>
<%= form_with(model: @transfer, url: group_transfers_path, method: :post) do |form| %>
<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-field', autocomplete: "name" %>
</div>

<div class="form-group">
<%= form.label :amount %>
<%= form.number_field :amount, class: 'form-field' %>
</div>

<% if @groups %>
  </div>
      <%= form.label :groups %>
      <%= form.collection_check_boxes(:group_ids, @groups, :id, :name) do |b| %>
          <div class="checkbox">
          <%= b.check_box + b.label %>
          </div>
      <% end %>
  <div>
<% end %>

<%= form.submit 'Create Category', class: 'btn' %>
<% end %>