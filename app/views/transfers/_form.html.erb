<button class="save"><%= link_to "back", groups_path  %></button>

<div class="category_form">
<%= form_with(model: @transfer, url: group_transfers_path, method: :post) do |form| %>
<div class="form-group">
  <%= form.label :name, class: "label" %>
  <%= form.text_field :name, class: 'form-field', autocomplete: "name" %>
</div>

<div class="form-group">
<%= form.label :amount, class: "label" %>
<%= form.number_field :amount, class: 'form-field' %>
</div>

<% if @groups %>
  <div class="groups">
      <%= form.label :groups, class: "label" %>
      <%= form.collection_check_boxes(:group_ids, @groups, :id, :name) do |b| %>
          <div class="checkbox">
          <%= b.check_box + b.label %>
          </div>
      <% end %>
  <div>
<% end %>

<div class="category_btn_container"><%= form.submit 'Create expense', class: 'new_category' %></div>
<% end %>
</div>
